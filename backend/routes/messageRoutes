const express = require('express')
const router = express.Router()
const {
	getMessages,
	setMessage,
	updateMessage,
	deleteMessage,
} = require('../controllers/messageController')

router.route('/').get(getMessages).post(setMessage)
router.route('/:id').put(updateMessage).delete(deleteMessage)

